{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    "module": "nodenext",
    "types": ["node"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "isolatedModules": true,
  },
  "include": ["src/**/*"]
}
